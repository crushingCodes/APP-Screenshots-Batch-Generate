{
  "name": "app-screenshots-batch-generate",
  "version": "1.0.0",
  "description": "This is a new project built for the purpose of providing a quick method to generate images for the different sizes and orientations for major app platforms. The original version will run primarily as a web app using Javascript. Currently creating npm version which can be added to anyones build scripts.",
  "main": "index.js",
  "scripts": {
    "start": "tsc && node dist/index.js",
    "generate": "npm run clean && node dist/index.js",
    "clean": "rm -r screensOut && mkdir screensOut",
    "build": "tsc && node dist/index.js"
  },
  "bin": {
    "app-g-build": "bin/app-g-build.js",
    "app-g-build-silent": "bin/app-g-build-silent.js",
    "app-g-generate": "bin/app-g-generate.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crushingCodes/APP-Screenshots-Batch-Generate.git"
  },
  "author": "crushingCodes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/crushingCodes/APP-Screenshots-Batch-Generate/issues"
  },
  "homepage": "https://github.com/crushingCodes/APP-Screenshots-Batch-Generate#readme",
  "dependencies": {
    "@types/node": "^11.11.3",
    "fs-extra": "^7.0.1",
    "image-size": "^0.7.2",
    "lodash": "^4.17.11",
    "mkdirp": "^0.5.1",
    "mkdirp-promise": "^5.0.1",
    "resize-img": "^1.1.2",
    "shelljs": "^0.8.3"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.123"
  }
}
